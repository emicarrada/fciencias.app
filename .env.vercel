# Configuración para GitHub Pages / Vercel Deployment

# Domain Configuration
DOMAIN=fciencias.app
WWW_DOMAIN=www.fciencias.app
API_DOMAIN=api.fciencias.app

# Production URLs
NEXT_PUBLIC_API_URL=https://api.fciencias.app/api/v1
FRONTEND_URL=https://fciencias.app

# Database (usar PostgreSQL en producción)
DATABASE_URL=postgresql://username:password@host:5432/fciencias_app

# JWT Configuration (generar con: openssl rand -base64 64)
JWT_SECRET=your_super_secure_jwt_secret_here_64_characters_minimum
JWT_REFRESH_SECRET=your_super_secure_jwt_refresh_secret_here_64_characters

# CORS Configuration
CORS_ORIGIN=https://fciencias.app

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Security
BCRYPT_ROUNDS=12

# Environment
NODE_ENV=production
