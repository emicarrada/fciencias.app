# Environment variables for development
NODE_ENV=development
PORT=4001

# Database configuration
DATABASE_URL="postgresql://fciencias:fciencias@localhost:5432/fciencias_dev"

# JWT Configuration
JWT_SECRET=dev_please_change_me_in_production
JWT_EXPIRATION=1h
REFRESH_TOKEN_SECRET=dev_refresh_secret_change_me
REFRESH_TOKEN_TTL_DAYS=30

# Mail Configuration (MailHog for development)
MAIL_FROM="no-reply@fciencias.app"
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_SECURE=false
MAIL_USER=""
MAIL_PASS=""

# Email Service for verification (Gmail SMTP for development)
EMAIL_USER=noreply.fciencias@gmail.com
EMAIL_PASS=your_app_password_here

# Frontend URL
FRONTEND_URL=http://localhost:3000

# File Storage Configuration (MinIO for development)
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_BUCKET=fciencias-dev
STORAGE_ACCESS_KEY=devaccess
STORAGE_SECRET_KEY=devsecret

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Security
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Application
APP_NAME="FcienciasApp"
APP_URL=http://localhost:3000
API_PREFIX=api/v1

# CORS
CORS_ORIGIN=http://localhost:3000
